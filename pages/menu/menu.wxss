.bottom{
  /* height: 565rpx;      */
  height: 50%;
  width: 100%;
  text-align:left;
  background-color: rgba(1, 10, 15, 0.9);
  border-top:1px solid rgb(217, 217, 217);
  bottom: 0; 
  position: absolute;
  display: flex;
  color: #CCCCCC;
}
.bottom .count{
  color: #fff;
  font-size: 20rpx;
  border: 1rpx solid red;
  border-radius: 30rpx;
  position:relative;
  bottom: 38rpx;
  right: 10rpx;
  background: red;
  height: 30rpx;
  width: 30rpx;
  line-height: 30rpx;
  text-align: center;
}
.bottom .img{
  height: 90rpx;
  width: 90rpx;
  border: 1rpx solid rgb(30, 144, 255);
  border-radius: 90rpx;
  background: rgb(30, 144, 255);
  position: relative;
  left: 20rpx;
  bottom: 25rpx;
}
.bottom .img image{
  height: 60rpx;
  width: 60rpx;
  position: relative;
  left:15rpx;
  bottom:-15rpx;
}
.bottom .word{
  margin-top: 20rpx; 
  margin-left: 50rpx;
  font-size: 30rpx;
  position: absolute;
  left: 100rpx;
}
.bottom .total{
  margin-top: 15rpx; 
  font-size: 45rpx;
  width: 250rpx;
  text-align: right;
  position: absolute;
  left: 280rpx;
}
.bottom .pay{
  height: 100%;
  border: 1rpx solid #1E90FF;
  padding: 20rpx 40rpx;
  position: absolute;
  right: 0;
  background: #1E90FF;
  color: #fff;
}
.trolley-scroll{
  height: 200rpx;

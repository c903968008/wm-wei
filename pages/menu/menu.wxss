  height: 250rpx;
  width: 100%;
  position: absolute;
  top: 330rpx;
  background: #ECECEC;
}

.trolley .trolley-top{
  padding: 10rpx;
  display: flex;
  line-height: 50rpx;
  font-size: 30rpx;
  background: #DCDCDC;
  height: 50rpx;
}
.trolley .trolley-name{
  width: 200rpx;
}
.trolley .trolley-top .empty{
  display: flex;
  padding-left: 340rpx;
  font-size: 25rpx;
}
.trolley .trolley-top .empty image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 10rpx;
}
.trolley .trolley-content{
  display: flex;
  border-bottom: 1rpx solid #CCCCCC;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #696969;
}
.trolley-content .name{
  width: 350rpx;
}
.trolley-content .money{
  width: 250rpx;
}
.trolley-numb{
  height: 40rpx;
  width: 130rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 40rpx;
  font-size: 25rpx; 
} 
.trolley-numb .add,.trolley-numb .remove{
  width: 40rpx;
  height: 40rpx;
  border-radius: 30rpx;
  text-align: center; 
}
.trolley-numb .add{
  font-size: 35rpx;
  line-height: 37rpx;
  font-weight: 700;
  background: #FFD161;
  margin-left: 15rpx;
}
.trolley-numb .remove{
  margin-right: 15rpx;
  line-height: 28rpx;
  font-size: 60rpx;
  font-weight: 500;
  box-sizing: border-box;
  border: 2rpx;
  border-style: solid; 
  border-color: #B0B0B0;
  color: #B0B0B0;
}